name: Deploy to Production

on:
  # CI 워크플로우 완료 후 자동 배포
  workflow_run:
    workflows: ["Frontend CI", "Backend CI"]
    types:
      - completed
    branches:
      - main

  # 인프라 핵심 파일 변경 시 즉시 배포
  push:
    branches:
      - main
    paths:
      - 'docker-compose.yml'
      - 'frontend/nginx.conf'
      - '.github/workflows/deploy.yml'
      - 'Dockerfile'
      - 'frontend/Dockerfile'

  # 수동 실행 지원
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    # workflow_run 이벤트일 때만 success 체크, push/dispatch는 항상 실행
    if: |
      github.event_name == 'push' ||
      github.event_name == 'workflow_dispatch' ||
      (github.event_name == 'workflow_run' && github.event.workflow_run.conclusion == 'success')

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Deploy to Azure VM
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.DEPLOY_HOST }}
          username: ${{ secrets.DEPLOY_USER }}
          key: ${{ secrets.DEPLOY_SSH_KEY }}
          port: 22
          script: |
            cd ${{ secrets.DEPLOY_PATH }}
            git pull origin main
            # Ensure frontend .env exists on server for build
            echo "VITE_API_URL=http://20.197.14.81/api" > ./frontend/.env
            docker compose down
            docker compose up -d --build

